@page
@model PhuongLHK.Asm2.Web.Pages.Customers.LoginModel
@{
    ViewData["Title"] = "Login";

}
@{
   <header>
    <div class="container">
         <ul class="nav justify-content-end">
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-page="./Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="" asp-page="/Account/Login">Login as Staff</a>
        </li>
        </ul>
    </div>
    </header>
    <h1>Login Page</h1>
    @if (Model.Input != null)
    {
        var latestErrorMessage = Model.ModelState.Values.SelectMany(v => v.Errors)
                                            .OrderByDescending(e => e.Exception?.HResult)
                                            .Select(e => e.ErrorMessage)
                                            .FirstOrDefault();

        if (!string.IsNullOrEmpty(latestErrorMessage))
        {
                    <div class="alert alert-danger" role="alert">
                @latestErrorMessage
                    </div>
        }
    }

    <form method="post">
        <div class="form-group">
                <label asp-for="Input.Phone"></label>
                <input asp-for="Input.Phone" class="form-control" />
                <span asp-validation-for="Input.Phone" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.Password"></label>
            <input asp-for="Input.Password" class="form-control" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="form-check">
                <input asp-for="Input.RememberMe" class="form-check-input" />
                <label class="form-check-label" asp-for="Input.RememberMe"></label>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Login</button>
    </form>
}
